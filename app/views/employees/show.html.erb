<div class="container my-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Employee Name</h5>
                    <% if @employee.present? %>
                        <p class="card-text"><%= @employee.employee_name %></p>
                    <% end  %>               
                    </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Gender</h5>
                    <% if @employee.present? %>
                      <p class="card-text"><%= @employee.gender %></p>
                    <% end  %>      
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Hobbies</h5>
                    <% if @employee.present? %>
                        <p class="card-text"><%= @employee.hobbies %></p>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
